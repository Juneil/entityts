  "dependencies": {
    "joi": "^13.0.1",
    "reflect-metadata": "^0.1.10"
  },
  "devDependencies": {
    "@types/joi": "^10.4.4",
    "@types/node": "^8.0.46",
    "istanbul": "^1.1.0-alpha.1",
    "mocha": "^4.0.1",
    "mocha-typescript": "^1.1.11",
    "ts-node": "^3.3.0",
    "tslint": "^5.8.0",
    "typescript": "^2.5.3",
    "unit.js": "^2.0.0"
  }
}
